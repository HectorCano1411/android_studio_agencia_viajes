<?xml version="1.0" encoding="utf-8"?>
    <resources>

        <!-- Estilo del título -->
        <style name="TitleText">
            <item name="android:textSize">24sp</item>
            <item name="android:textColor">#007acc</item> <!-- Azul agradable -->
            <item name="android:fontFamily">sans-serif-medium</item> <!-- Fuente legible -->
        </style>

        <!-- Estilo del texto normal -->
        <style name="NormalText">
            <item name="android:textSize">16sp</item>
            <item name="android:textColor">#333333</item> <!-- Texto oscuro -->
            <item name="android:fontFamily">sans-serif</item> <!-- Fuente estándar -->
        </style>

        <!-- Estilo del botón -->
        <style name="ButtonStyle">
            <item name="android:textSize">18sp</item>
            <item name="android:textColor">#FFFFFF</item> <!-- Texto blanco -->
            <item name="android:background">#007acc</item> <!-- Fondo azul -->
            <item name="android:padding">12dp</item>
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
        </style>

    </resources>
