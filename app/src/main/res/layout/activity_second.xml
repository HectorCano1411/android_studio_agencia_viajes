<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="SecondActivity">

<!--     Campos para mostrar la información de la primera pantalla-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="APP Agencia de Viajes"
        android:textColor="@color/white"
        android:background="@color/cardview_dark_background"
        android:textSize="24sp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"/>


    <TextView
        android:id="@+id/textViewNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:layout_marginBottom="8dp"
        android:textStyle="bold"/>



    <TextView
        android:id="@+id/textViewApellido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apellido"
        android:layout_marginBottom="8dp"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/textViewRut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rut"
        android:layout_marginBottom="8dp"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/textViewDestino"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Destino"
        android:layout_marginBottom="16dp"
        android:textStyle="bold"/>

    <!-- Campos para ingresar información adicional -->
    <EditText
        android:id="@+id/editTextLineaAerea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre de la línea aérea"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/editTextCiudadEmbarque"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ciudad de embarque"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/editTextValorPasaje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Valor del pasaje"
        android:inputType="number"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/editTextCiudadEmbarqueRegreso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ciudad de embarque de regreso"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/editTextValorPasajeRegreso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Valor del pasaje de regreso"
        android:inputType="number"
        android:layout_marginBottom="16dp"/>


    <!-- Botones para la navegación -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnVolver"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Volver"
            android:layout_marginRight="8dp"/>

        <Button
            android:id="@+id/btnSiguiente"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Siguiente"/>


    </LinearLayout>
</LinearLayout>
